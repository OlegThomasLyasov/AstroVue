---
interface Props {
	title: string
}

const {title = 'friends.modulbank'} = Astro.props as Props

// компоненты (по готовности переделать в 1 json?)
import Header from '../components/Header.vue';
import HeaderInfo from '../assets/data/Header.json';
import FirstScreen from '../components/FirstScreen.vue';
import FirstInfo from '../assets/data/FirstSection.json';
import Card from '../components/common/Card.vue';
import CardInfo from '../assets/data/Card.json';
import ImageText from '../components/imageText.vue';
import ImageTextInfo from '../assets/data/DataImageText.json';
import Footer from '../components/Footer.vue';
import FooterInfo from '../assets/data/Footer.json';
import FormRegistration from '../components/FormRegistration.vue';
import FormInfo from '../assets/data/FormRegistration.json';

import All from '../assets/data/All.json';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="icon" type="image/png" href="/152x152.png" />
		<link rel="icon" type="image/png" href="/270x270.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="robots" content="/robots.txt">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body id="astro_header">
        <Header data={HeaderInfo}/>
		<FirstScreen data={FirstInfo} client:visible/>
		<Card data={CardInfo}/>
		<ImageText data={ImageTextInfo}/>
		<FormRegistration data={FormInfo} client:visible/>
		<Footer data={FooterInfo}/>
	</body>
</html>

<style lang="stylus" is:global>

body {
    margin: 0 auto
	height: 100%
    display: flex
    flex-direction: column
    font-size: 16px
    font-weight: 400
	font-family: 'Montserrat'
	font-style: normal
	background-color: #F5F5F6
}
</style>