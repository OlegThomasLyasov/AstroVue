img = '~assets/images/'

// Prefix for :root CSS variables

$variable-prefix = mb- !default

// FONTS
font-family-sans-serif = 'Montserrat', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji"
font-family-monospace = SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace
$font-family-base = font-family-sans-serif

// SIZES
ultraBold = 900
bold = 700
medium = 500
regular = 400
light = 300
ultraLight = 200
thin = 100

// GRID
gap-mob = 1.5rem
gap = 3rem
grid-md = 76.8rem
grid-lg = 108rem
grid-xl = 119.9rem // 123rem
desktop = grid-xl

// COLORS

$blue-primary = #0057FF
$blue-hover = #0075FF
$blue-disabled = rgba($blue-primary, .35)
$blue-015 = rgba($blue-primary, .15)

$green-primary = #82D641
$green-hover = #82E03A
$green-disabled = rgba($green-primary, .35)
$green-015 = rgba($green-primary, .15)


// цвета страницы МодульЮрист
$lawyer-primary = #00885C
$lawyer-hover = #009F6C
$lawyer-disabled = rgba($lawyer-primary, .35)
$lawyer-015 = rgba($lawyer-primary, .15)

$orange-primary = #FF7737
$orange-hover = #FF6813
$orange-disabled = rgba($orange-primary, .35)
$orange-015 = rgba($orange-primary, .15)

$dark-primary = #080D13
$dark-secondary = rgba($dark-primary, .65)
$dark-terteriary = rgba($dark-primary, .35)
$dark-pale = rgba($dark-primary, .10)
$dark-background = #F5F5F6

$light-primary = #FFFFFF
$light-secondary = rgba($light-primary, .6)
$light-terteriary = rgba($light-primary, .3)
$light-background = rgba($light-primary, .05)

$system-error = #F24F4F
$system-error-015 = rgba($system-error, .35)
$system-success = #76D92A
$system-success-015 = rgba($system-success, .35)

$brand-blue = #2042AB
$brand-blue-light = #3C69F3
$brand-blue-gradient = linear-gradient(121.98deg, #284CBC 40.11%, #4873F2 92.3%)
$brand-orange-gradient = linear-gradient(315deg, #FD8A28 0%, #FD6554 100%)

colors = {
  'blue-primary': $blue-primary
  'blue-hover': $blue-hover
  'blue-disabled': $blue-disabled
  'blue-015': $blue-015
  'green-primary': $green-primary
  'green-hover': $green-hover
  'green-disabled': $green-disabled
  'green-015': $green-015
  'lawyer-primary': $lawyer-primary // цвета страницы МодульЮрист
  'lawyer-hover': $lawyer-hover
  'lawyer-disabled': $lawyer-disabled
  'lawyer-015': $lawyer-015
  'orange-primary': $orange-primary
  'orange-hover': $orange-hover
  'orange-disabled': $orange-disabled
  'orange-015': $orange-015
  'dark-primary': $dark-primary
  'dark-secondary': $dark-secondary
  'dark-terteriary': $dark-terteriary
  'dark-background': $dark-background
  'dark-pale': $dark-pale
  'light-primary': $light-primary
  'light-secondary': $light-secondary
  'light-terteriary': $light-terteriary
  'light-background': $light-background
  'system-error': $system-error
  'system-error-015': $system-error-015
  'system-success': $system-success
  'system-success-015': $system-success-015
  'brand-blue': $brand-blue
  'brand-blue-light': $brand-blue-light
}

