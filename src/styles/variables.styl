gradient-gray = linear-gradient(0deg, bg-color, bg-color),
  linear-gradient(135deg, #ED6A62 -1%, #EE8D3C 75%),
  linear-gradient(0deg, #A3DD07, #A3DD07), #C4C4C4

gradient-orange = $brand-orange-gradient

// SHADOWS
base-shadow = 0px 4px 15px rgba($dark-primary, 0.03)
blue-shadow = 0px 6px 10px rgba($blue-primary, 0.15)
green-shadow = 0px 6px 10px rgba($green-primary, 0.15)
