orange-shadow = 0px 6px 10px rgba($orange-primary, 0.15)
image-shadow = 0 4px 15px rgba(8, 13, 19, 0.03)


// ELEMENTS
input-bg-color = gray200
input-height-mob = 5rem
input-height = 6rem
button-height-small = 4.4rem
button-height-medium = 5rem
button-height-large = input-height
placeholder-color = gray

// HEADER
header-height = 6rem
header-bg-color = blue000
header-page-height = header-height

// FOOTER
footer-height = 22.1rem

// z-index
zindex-header = 4
zindex-header-fade = 3
zindex-header-page = 3
zindex-stories-overlay = 99
zindex-stories-popup = 100
zindex-stories-popup-close = 4
