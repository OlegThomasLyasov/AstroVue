.row
  display flex
  flex-wrap wrap
  margin (-(gap/2)) (-(gap-mob))
  &:not(:first-of-type)
    margin-top gap
  &:not(:last-of-type)
    margin-bottom gap
  +mediaQuery1440()
    margin-left (-(gap/2))
    margin-right (-(gap/2))

col-attr()
  flex 0 0 arguments
  max-width arguments

.col-sm-1, .col-sm-2, .col-sm-3, .col-sm-4, .col-sm-5, .col-sm-6, .col-sm-7, .col-sm-8, .col-sm-9, .col-sm-10, .col-sm-11, .col-sm-12,
.col-md-1, .col-md-2, .col-md-3, .col-md-4, .col-md-5, .col-md-6, .col-md-7, .col-md-8, .col-md-9, .col-md-10, .col-md-11, .col-md-12,
.col-lg-1, .col-lg-2, .col-lg-3, .col-lg-4, .col-lg-5, .col-lg-6, .col-lg-7, .col-lg-8, .col-lg-9, .col-lg-10, .col-lg-11, .col-lg-12,
  position relative
  width 100%
  min-height 1px
  margin-top (gap/2)
  margin-bottom (gap/2)
  padding-left gap-mob
  padding-right gap-mob
  +mediaQuery1440()
    padding-left (gap/2)
    padding-right (gap/2)

+mediaQuery768()
  for key in (1..12)
    .col-sm-{key}
      col-attr: round((key * 100 / 12)%,6)

+mediaQuery1024()
  for key in (1..12)
    .col-md-{key}
      col-attr: round((key * 100 / 12)%,6)

+mediaQuery1230()
  for key in (1..12)
    .col-lg-{key}
      col-attr: round((key * 100 / 12)%,6)
