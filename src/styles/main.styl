*
  box-sizing border-box

html
  height 100%
  font-size 62.5%
  font-family var(--mb-font-family-base)
  color var(--mb-dark-primary)
  --cards-min-height 24rem
  & > div[style]
    display none !important

body
  height 100%
  display flex
  flex-direction column
  font-size 1.6rem
  font-weight regular
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased
  font-smoothing antialiased

a
  text-decoration none
  -webkit-tap-highlight-color rgba(255, 255, 255, 0)

a
button
  outline 0 none



// Typography


h1, h2, h3, h4, h5
  letter-spacing -0.02em

h1
.h1 // в слайдере на первом экране h2.h1
  font-size 2.2rem
  line-height 120%
  +mediaQuery768()
    font-size 2.8rem
  +mediaQuery1024()
    font-size 3.6rem

h2
  font-size 2.2rem
  line-height 120%
  +mediaQuery768()
    font-size 2.4rem
  +mediaQuery1024()
    font-size 3rem
h3
  font-size 1.8rem
  line-height 120%
  +mediaQuery768()
    font-size 2.1rem
  +mediaQuery1024()
    font-size 2.4rem
h4
  font-size 1.6rem
  line-height 120%
  +mediaQuery768()
    font-size 1.8rem
  +mediaQuery1024()
    font-size 2rem
h5
  font-size 1.4rem
  line-height 150%
  +mediaQuery768()
    font-size 1.6rem

h2, h3, h4, h5
  margin 0

.subtitle
  default-link()
  color var(--mb-dark-secondary)
  font-size 1.4rem
  line-height 150%
  +mediaQuery768()
    font-size 1.6rem
  +mediaQuery1024()
    font-size 1.8rem

// Text Regular
.p
  p()
  default-link()
  font-weight 400
  font-size 1.4rem
  line-height 150%
  letter-spacing -0.02em
  color var(--mb-dark-secondary)
  .a
    color var(--mb-dark-secondary)
    text-decoration underline

.ul
  margin-top 2rem
  margin-bottom 2rem
  margin-left 2rem
  padding-left 0

.li
  list-style-type "\2022"
  padding-left 1rem
  &.margin
    &:not(:first-of-type)
      margin-top 2rem
    &:not(:last-of-type)
      margin-bottom 2rem

.text-semibold
.link-bold
.link-semibold
  font-size 1.4rem
  letter-spacing -0.02em

// Text Semibold
.text-semibold
  font-weight 600
  line-height 150%

// Link Bold
.link-bold
  font-weight 700
  line-height 120%
  +mediaQuery768()
    line-height 129%
  +mediaQuery1024()
    font-size 1.6rem
    line-height 125%

// Link Semibold
.link-semibold
  link-semibold()
  +mediaQuery1024()
    font-size 1.6rem

// Input

// Label
.label
  font-weight 600
  font-size 10px
  line-height 150%
  letter-spacing 0.15em
  text-transform uppercase
  color var(--mb-dark-primary)
  +mediaQuery1024()
    font-size 11px
    line-height 136%
    letter-spacing 0.03em

// Description
.description
  font-weight 400
  font-size 1rem
  line-height 150%
  letter-spacing -0.02em
  +mediaQuery768()
    font-size 1.2rem

.tariffs-cell-title
  display flex
  align-items center
  position relative

  &:before
    position relative
    top -.1rem
    content ''
    height .7rem
    width .7rem
    border-radius 50%
    margin-right .7rem

  &.blue-primary
    &:before
      background-color var(--mb-blue-primary)

  &.green-primary
    &:before
      background-color var(--mb-green-primary)

  &.dark-primary
    &:before
      background-color var(--mb-dark-primary)

  &.orange-primary
    &:before
      background-color var(--mb-orange-primary)

  &.lawyer-primary
    &:before
      background-color var(--mb-lawyer-primary)

[type=email],
[type=tel],
[type=text]
  padding-right 16px
  padding-left 16px
  background input-bg-color
  border 0 none
  height input-height-mob
  line-height normal
  color blue000
  width 100%
  font-size 1.6rem
  font-weight 600
  &:focus
    outline none
  &::placeholder
    color placeholder-color
  +mediaQuery768()
    height input-height
    font-size 1.8rem
[type=checkbox]
  display inline-block
input::-ms-clear
  display none

label
  font-size 15px
  color gray000
// @supports (display: grid)
//   .grid
//     display grid
.container
  container()
  padding-left gap-mob
  padding-right gap-mob
  +mediaQuery600()
    padding-left gap
    padding-right gap
  +mediaQuery1440()
    padding-left 0
    padding-right 0
  &.lg
    max-width grid-lg
.container_full
  container()
  +mediaQuery600()
    padding-left gap
    padding-right gap
  +mediaQuery1440()
    padding-left 0
    padding-right 0
  &.lg
    max-width grid-lg
.section
  +mediaQuery768()
    margin-top 30px
    margin-bottom 30px

