input
  &[type=range]
    -webkit-appearance none
    width 100%
    margin -0.35rem 0 1rem
    &:focus
      outline none
    &::-webkit-slider-runnable-track
      width 100%
      height 0px
      cursor pointer
      background transparent
    &::-webkit-slider-thumb
      border 0.5rem solid green000
      height 2rem
      width 2rem
      border-radius 50%
      background #ffffff
      cursor pointer
      -webkit-appearance none
      margin-top .5rem
    &:focus::-webkit-slider-runnable-track
      background transparent
    &::-moz-range-track
      width 100%
      height 2px
      cursor pointer
      background transparen
      border-radius 0
    &::-moz-range-thumb
      border 0.5rem solid green000
      height 1rem
      width 1rem
      border-radius 50%
      background #fff
      cursor pointer
      transform translateY(.5rem)
    &::-moz-focus-outer
      border none
    &::-ms-track
      width 2rem
      height 2rem
      cursor pointer
    &::-ms-thumb
      border 0.3rem solid green000
      height 0.7rem
      width 0.7rem
      border-radius 50%
      background #fff
      margin-top 2rem
      transform translateY(-1.5rem)
      cursor pointer

.content
  margin 0
  padding 0
  ul
    margin 0
    padding 0
  li
    list-style none
    padding-left 2rem
    position relative
    &:before
      position absolute
      top 0.8rem
      left 0
      content ''
      display block
      width 0.5rem
      height 0.5rem
      background linear-gradient(150deg, #A3DB33 15%, #84C209 85%)
  .img
    width 100%
    display block
    margin 2rem 0
    height auto

fs()
  color #fff
  position relative
  &:after
    content ''
    position absolute
    width 100%
    background-size contain
    background-repeat no-repeat
    top 0
    +mediaQuery768()
      background-image url('/images-new/rko/lines-mob.svg'), linear-gradient(150deg, main-color 12.5%, blue200 100%)
      right 0
      background-position 100% 0
    +mediaQueryM768()
      background-image url('/images-new/rko/lines.svg'), linear-gradient(150deg, main-color 12.5%, blue200 100%)
      background-position 50% 100%
// класс для длинного FirstScreen
.fs
  fs()
// класс для короткого FirstScreen
.fs-s
  fs()
  &:after
    background-position 50% 10%
    background-size cover
// класс для FirstScreen без сетки
.fs-w
  fs()
  &:after
    background-image linear-gradient(150deg, main-color 12.5%, blue200 100%)
    +mediaQuery768()
      background-image linear-gradient(150deg, main-color 12.5%, blue200 100%)

.dashedLink
  position relative
  white-space nowrap
  transition color .3s
  font-size 1.4rem
  font-weight bold
  line-height 1.8rem
  color main-color
  &:hover
    color secondary-color
    &:after
      border-bottom-color secondary-color
  &:after
    transition border-bottom-color .2s
    content ' '
    position absolute
    left 0
    bottom -2px
    width 100%
    border-bottom 1.5px dashed main-color

.hide-mobile
  display none!important
  +mediaQuery1024()
    display inherit!important
.hide-tablet
  display none!important
  +mediaQuery768()
    display inherit!important
.hide-desktop
  display inherit!important
  +mediaQuery1024()
    display none!important
.show-1440
  display none!important
  +mediaQuery1440()
    display inherit!important

/**
 * Atomic CSS
 */

.font-extrabold
  font-weight 800

.br-320
  display none
.br-768
  display none
  +mediaQuery768()
    display block
.br-1024
  display none
  +mediaQuery1024()
    display block

.color-blue-primary
  color var(--mb-blue-primary)

.color-lawyer-primary
  color var(--mb-lawyer-primary)

.color-green-primary
  color var(--mb-green-primary)

.color-dark-terteriary
  color var(--mb-dark-terteriary)

.rounded-tl
  border-top-left-radius 1rem
.rounded-tr
  border-top-right-radius 1rem
.rounded-bl
  border-bottom-left-radius 1rem
.rounded-br
  border-bottom-right-radius 1rem
  border-bottom-right-radius 1rem

.tracking-tight
  letter-spacing -0.02em

