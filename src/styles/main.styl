  padd-bott()
.marg
  marg-top()
  marg-bott()

.marg-top-fs
  marg-top-fs()

.marg-bott-fs
  marg-bott-fs()

.marg-fs
  marg-top-fs()
  marg-bott-fs()

.marg-top-null
  marg-top-null()

.marg-bott-null
  marg-bott-null()

.marg-null
  marg-top-null()
  marg-bott-null()


.padd-top-black
  padding-top 10rem
  +mediaQuery768()
    padding-top 20rem
  +mediaQuery1024()
    padding-top 22.5rem
  +mediaQuery1440()
    padding-top 25rem

.page-enter-active, .page-leave-active
  transition opacity .3s ease-in
.page-enter, .page-leave-active
  opacity 0

.fade-enter-active, .fade-leave-active
  transition opacity .3s
.fade-enter, .fade-leave-to
  opacity 0

.fastfade-enter-active, .fastfade-leave-active
  transition opacity .1s
.fastfade-enter, .fastfade-leave-to /* .fade-leave-active до версии 2.1.8 */
  opacity 0

.slide-fade-enter-active, .slide-fade-leave-active
  transition opacity .3s
.slide-fade-enter, .slide-fade-leave-to
  opacity 0

.aside-enter-active, .aside-leave-active
  transition transform .3s
.aside-enter, .aside-leave-to /* .fade-leave-active до версии 2.1.8 */
  transform translateX(100%)

.link
  cursor pointer
  letter-spacing -0.02em
  transition opacity 0.3s
  &:hover
    opacity 0.3

